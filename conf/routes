# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                       PageController.Index

#admin create
GET     /admin/create                           PageController.AdminCreatePage
POST    /admin/create             		PageController.CreatePage 

#admin update
GET     /admin/update/{url}                     PageController.AdminUpdatePage
POST    /admin/update             		PageController.UpdatePage 

#admin delete
#GET     /admin/update/{url}                     PageController.AdminUpdatePage
GET    /admin/delete/{url}            		PageController.AdminDelete 

#admin list of pages
GET     /admin/list                             PageController.AdminListPages

#pages
GET     /page/{url}                             PageController.Page


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/{<.+>filepath}              Static.Serve("public")



# Catch all
#*       /{controller}/{action}                  {controller}.{action}
